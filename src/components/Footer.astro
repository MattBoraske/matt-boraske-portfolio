---
import GitHub from './icons/GitHub.astro';
import LinkedIn from './icons/LinkedIn.astro';
import Medium from './icons/Medium.astro';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://github.com/MattBoraske', icon: GitHub, label: 'GitHub' },
  { href: 'https://www.linkedin.com/in/matt-boraske/', icon: LinkedIn, label: 'LinkedIn' },
  { href: 'https://medium.com/@mattboraske', icon: Medium, label: 'Medium' },
];
---

<footer class="footer-terminal">
  <div class="max-w-content mx-auto px-6 py-8">
    <!-- Decorative top border -->
    <div class="border-line"></div>

    <div class="footer-content">
      <!-- Terminal-style copyright -->
      <div class="copyright-section">
        <span class="terminal-prompt">~$</span>
        <span class="copyright-text">Â© {currentYear} Matthew Boraske</span>
        <span class="cursor-blink">_</span>
      </div>

      <!-- Social links with terminal styling -->
      <div class="social-section">
        {socialLinks.map(({ href, icon: Icon, label }) => (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={label}
            class="social-link"
          >
            <Icon class="w-5 h-5" />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-terminal {
    position: relative;
    background: var(--color-bg-footer);
    border-top: 1px solid var(--color-border);
    backdrop-filter: blur(20px);
    margin-top: 4rem;
  }

  .border-line {
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent) 50%,
      transparent
    );
    margin-bottom: 2rem;
    box-shadow: 0 0 10px var(--color-glow);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .footer-content {
      flex-direction: row;
    }
  }

  .copyright-section {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
  }

  .terminal-prompt {
    color: var(--color-accent-hover);
    font-weight: 700;
  }

  .copyright-text {
    color: var(--color-text);
  }

  .cursor-blink {
    display: inline-block;
    width: 0.5em;
    height: 1em;
    background: var(--color-accent);
    animation: blink 1s step-end infinite;
  }

  .social-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .social-link {
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    position: relative;
  }

  .social-link::before {
    content: '';
    position: absolute;
    inset: -8px;
    border: 1px solid transparent;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: var(--color-accent);
    transform: translateY(-3px) scale(1.1);
    filter: drop-shadow(0 0 12px var(--color-glow));
  }

  .social-link:hover::before {
    border-color: var(--color-border);
    box-shadow: 0 0 15px var(--color-glow);
  }
</style>
