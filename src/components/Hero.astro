---
// Hero component with retro-futuristic data aesthetic
---

<section id="hero" class="hero-section">
  <div class="hero-grid"></div>
  <div class="hero-scanlines"></div>

  <div class="hero-content">
    <div class="hero-label">
      <span class="label-bracket">[</span>
      <span class="label-text">DATA_SCIENTIST</span>
      <span class="label-bracket">]</span>
      <span class="label-cursor">_</span>
    </div>

    <h1 class="hero-title">
      <span class="title-line">Matt</span>
      <span class="title-line title-line-offset">Boraske</span>
    </h1>

    <div class="hero-description">
      <p class="description-text">
        Building intelligent systems at the intersection of
        <span class="highlight">machine learning</span>,
        <span class="highlight">data engineering</span>, and
        <span class="highlight">biotechnology</span>.
      </p>
    </div>

    <div class="hero-cta">
      <a href="/Matthew_Boraske_Resume.pdf" download class="cta-primary">
        <svg class="cta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <span class="cta-text">Download Resume</span>
      </a>
      <a href="#contact" class="cta-secondary">
        <span class="cta-text">Get in Touch</span>
      </a>
    </div>
  </div>

  <!-- Floating data particles -->
  <div class="data-particles">
    <div class="particle" style="--delay: 0s; --duration: 8s; --x: 10%; --y: 20%;">01</div>
    <div class="particle" style="--delay: 1s; --duration: 10s; --x: 80%; --y: 15%;">λ</div>
    <div class="particle" style="--delay: 2s; --duration: 12s; --x: 15%; --y: 70%;">∑</div>
    <div class="particle" style="--delay: 0.5s; --duration: 9s; --x: 85%; --y: 60%;">π</div>
    <div class="particle" style="--delay: 1.5s; --duration: 11s; --x: 50%; --y: 40%;">Δ</div>
    <div class="particle" style="--delay: 2.5s; --duration: 13s; --x: 30%; --y: 80%;">∞</div>
  </div>

  <!-- Scroll Down Indicator -->
  <a href="#about" id="scroll-indicator" class="scroll-indicator">
    <span class="scroll-text">
      <span class="scroll-bracket">[</span>
      <span>SCROLL TO EXPLORE</span>
      <span class="scroll-bracket">]</span>
    </span>
    <svg class="scroll-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </a>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Orbitron:wght@400;500;700;900&display=swap');

  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
    overflow: hidden;
    padding: 2rem;
    padding-top: 8rem; /* Account for fixed header (80px) + spacing */
  }

  /* Animated grid background */
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--grid-color) 1px, transparent 1px),
      linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
    background-size: var(--grid-size) var(--grid-size);
    animation: gridMove 20s linear infinite;
    opacity: 0.4;
  }

  @keyframes gridMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  /* CRT scanlines effect */
  .hero-scanlines {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      transparent 50%,
      var(--grid-color) 50%
    );
    background-size: 100% 4px;
    pointer-events: none;
    animation: scanlines 8s linear infinite;
  }

  @keyframes scanlines {
    0% { transform: translateY(0); }
    100% { transform: translateY(4px); }
  }

  /* Main content */
  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    width: 100%;
  }

  /* Label with cursor */
  .hero-label {
    font-family: 'Space Mono', monospace;
    font-size: clamp(0.875rem, 2vw, 1rem);
    color: var(--color-accent-hover);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
  }

  .label-bracket {
    color: var(--color-accent);
    font-weight: 700;
    font-size: 1.2em;
  }

  .label-cursor {
    display: inline-block;
    width: 0.7em;
    height: 1em;
    background: var(--color-accent-hover);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  /* Title */
  .hero-title {
    font-family: 'Orbitron', sans-serif;
    font-weight: 900;
    font-size: clamp(3rem, 12vw, 8rem);
    line-height: 0.9;
    margin: 0 0 3rem 0;
    color: var(--color-text);
    text-transform: uppercase;
  }

  .title-line {
    display: block;
    opacity: 0;
    transform: translateX(-50px);
    animation: slideInGlow 1s ease forwards;
    /* Subtle shadow for depth - theme-aware */
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  /* Light theme: use darker shadow for contrast */
  :global(:root:not([data-theme="dark"])) .title-line {
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
  }

  /* Dark theme: subtle glow for depth */
  :global([data-theme="dark"]) .title-line {
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }

  .title-line:nth-child(1) {
    animation-delay: 0.2s;
  }

  .title-line-offset {
    margin-left: 10%;
    animation-delay: 0.4s;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-hover), var(--color-accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes slideInGlow {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Accessibility: Respect user motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .title-line {
      animation: none;
      opacity: 1;
      transform: translateX(0);
      text-shadow: none; /* Remove all visual effects for users who prefer reduced motion */
    }

    .title-line-offset {
      animation: none;
    }

    .hero-label,
    .hero-description,
    .hero-cta,
    .data-particles {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .hero-grid {
      animation: none;
    }

    .hero-scanlines {
      animation: none;
      display: none; /* Remove scanlines effect */
    }

    .label-cursor {
      animation: none;
      opacity: 1;
    }
  }

  /* Description */
  .hero-description {
    max-width: 700px;
    margin-bottom: 4rem;
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.6s forwards;
  }

  .description-text {
    font-family: 'Space Mono', monospace;
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.8;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .highlight {
    position: relative;
    color: var(--color-accent);
    font-weight: 700;
    white-space: nowrap;
  }

  .highlight::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-hover));
    transform: scaleX(0);
    transform-origin: left;
    animation: underlineGrow 0.6s ease forwards;
    animation-delay: calc(var(--index, 0) * 0.1s + 1s);
  }

  .highlight:nth-of-type(1) { --index: 0; }
  .highlight:nth-of-type(2) { --index: 1; }
  .highlight:nth-of-type(3) { --index: 2; }

  @keyframes underlineGrow {
    to { transform: scaleX(1); }
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    opacity: 0;
    animation: fadeInUp 0.8s ease 1s forwards;
    margin-bottom: 6rem;
  }

  .cta-primary,
  .cta-secondary {
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 1.25rem 2.5rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cta-primary {
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-hover));
    color: var(--color-bg);
    border: 2px solid transparent;
  }

  .cta-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-accent-hover), var(--color-accent));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cta-primary:hover::before {
    opacity: 1;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px var(--color-glow);
  }

  .cta-secondary {
    background: transparent;
    color: var(--color-accent);
    border: 2px solid var(--color-accent);
  }

  .cta-secondary:hover {
    background: var(--color-border);
    border-color: var(--color-accent-hover);
    color: var(--color-accent-hover);
    transform: translateY(-2px);
  }

  .cta-text,
  .cta-arrow,
  .cta-icon {
    position: relative;
    z-index: 1;
  }

  .cta-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease;
  }

  .cta-arrow {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .cta-primary:hover .cta-arrow {
    transform: translateX(4px);
  }

  .cta-primary:hover .cta-icon {
    transform: translateY(2px);
  }

  /* Floating data particles */
  .data-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 5;
  }

  .particle {
    position: absolute;
    font-family: 'Space Mono', monospace;
    font-size: 1.5rem;
    color: var(--color-border);
    animation: float var(--duration, 10s) ease-in-out infinite;
    animation-delay: var(--delay, 0s);
    left: var(--x, 50%);
    top: var(--y, 50%);
    text-shadow: 0 0 10px var(--color-glow);
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 0.3;
    }
    50% {
      transform: translate(20px, -100px) rotate(180deg);
      opacity: 0.6;
    }
    90% {
      opacity: 0.3;
    }
  }

  /* Fade in animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 1rem;
    }

    .hero-label {
      font-size: 0.75rem;
    }

    .title-line-offset {
      margin-left: 5%;
    }

    .hero-cta {
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 5rem;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
    }

    .particle {
      font-size: 1rem;
    }

    .scroll-indicator {
      bottom: 1.5rem;
    }

    .scroll-text {
      font-size: 0.625rem;
    }
  }

  /* Scroll Down Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 15;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
    animation: fadeInBounce 1s ease 1.5s forwards;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .scroll-indicator.hide {
    opacity: 0;
    pointer-events: none;
  }

  .scroll-text {
    font-family: 'Space Mono', monospace;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    text-transform: uppercase;
  }

  .scroll-bracket {
    color: var(--color-accent);
    font-size: 0.875rem;
  }

  .scroll-arrow {
    color: var(--color-accent);
    animation: bounce 2s ease-in-out infinite;
    filter: drop-shadow(0 0 8px var(--color-glow));
  }

  .scroll-indicator:hover {
    transform: translateX(-50%) translateY(-5px);
  }

  .scroll-indicator:hover .scroll-text {
    color: var(--color-accent);
  }

  .scroll-indicator:hover .scroll-arrow {
    animation: bounceHover 0.6s ease-in-out infinite;
  }

  @keyframes fadeInBounce {
    0% {
      opacity: 0;
      transform: translateX(-50%) translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes bounceHover {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-grid,
    .hero-scanlines,
    .label-cursor,
    .particle {
      animation: none;
    }

    .title-line,
    .hero-label,
    .hero-description,
    .hero-cta {
      opacity: 1;
      transform: none;
      animation: none;
    }

    .scroll-indicator {
      animation: none;
      opacity: 1;
    }

    .scroll-arrow {
      animation: none;
    }
  }

</style>

<script>
  // Hide scroll indicator after user starts scrolling
  const scrollIndicator = document.getElementById('scroll-indicator');
  let hasScrolled = false;

  function handleScroll() {
    if (!hasScrolled && window.pageYOffset > 100) {
      hasScrolled = true;
      scrollIndicator?.classList.add('hide');
      // Remove listener after hiding to improve performance
      window.removeEventListener('scroll', handleScroll);
    }
  }

  window.addEventListener('scroll', handleScroll);
</script>
