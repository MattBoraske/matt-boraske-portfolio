---
interface Props {
  company: string;
  role: string;
  dateRange: string;
  description?: string;
  bullets?: string[];
  technologies?: string[];
  isCurrent?: boolean;
  type?: 'work' | 'education';
  logo?: string;
  logoSize?: string;
}

const { company, role, dateRange, description, bullets, technologies = [], isCurrent = false, type = 'work', logo, logoSize = 'w-8 h-8' } = Astro.props;
const isEducation = type === 'education';
---

<div class="relative pl-8 pb-12 last:pb-0">
  <!-- Timeline line -->
  <div class="absolute left-0 top-2 bottom-0 w-px bg-border"></div>

  <!-- Timeline dot/icon -->
  {isEducation ? (
    <div class="absolute left-0 top-2 -translate-x-1/2 w-5 h-5 flex items-center justify-center">
      <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
      </svg>
    </div>
  ) : (
    <div class="absolute left-0 top-2 -translate-x-1/2 w-5 h-5 flex items-center justify-center">
      <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"/>
        <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"/>
      </svg>
    </div>
  )}

  <div class="space-y-2">
    <div class="flex flex-wrap items-center gap-2">
      <span class="text-sm text-text-secondary">{dateRange}</span>
    </div>

    <h3 class="text-xl font-semibold text-text">{role}</h3>
    <div class="flex items-center gap-3">
      {logo && (
        <img src={logo} alt={`${company} logo`} class={logoSize} />
      )}
      <p class="text-text-secondary font-medium text-base">{company}</p>
    </div>

    {bullets ? (
      <ul class="text-text-secondary leading-relaxed pt-2 space-y-2 list-disc list-inside">
        {bullets.map((bullet) => (
          <li set:html={bullet} />
        ))}
      </ul>
    ) : (
      <p class="text-text-secondary leading-relaxed pt-2">
        {description}
      </p>
    )}

    {technologies.length > 0 && (
      <div class="flex flex-wrap gap-2 pt-3">
        {technologies.map((tech) => (
          <span class="px-3 py-1 bg-bg-secondary text-text-secondary text-sm rounded-full">
            {tech}
          </span>
        ))}
      </div>
    )}
  </div>
</div>
