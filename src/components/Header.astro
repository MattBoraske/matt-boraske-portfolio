---
import ThemeToggle from './ThemeToggle.astro';
import GitHub from './icons/GitHub.astro';
import LinkedIn from './icons/LinkedIn.astro';
import Medium from './icons/Medium.astro';
import Mail from './icons/Mail.astro';

interface Props {
  name?: string;
}

const { name = 'MB' } = Astro.props;

const navLinks = [
  { href: '#about', label: 'About' },
  { href: '#experience', label: 'Experience' },
  { href: '#research', label: 'Research' },
  { href: '#projects', label: 'Projects' },
  { href: '#skills', label: 'Skills' },
  { href: '#hobbies', label: 'Hobbies' },
  { href: '#writing', label: 'Writing' },
  { href: '#contact', label: 'Contact' },
];

const socialLinks = [
  { href: 'https://github.com/MattBoraske', icon: GitHub, label: 'GitHub' },
  { href: 'https://www.linkedin.com/in/matt-boraske/', icon: LinkedIn, label: 'LinkedIn' },
  { href: 'https://medium.com/@mattboraske', icon: Medium, label: 'Medium' },
  { href: '#contact', icon: Mail, label: 'Email' },
];
---

<header id="header" class="header-terminal">
  <nav class="max-w-content mx-auto px-6 h-20 flex items-center justify-between">
    <!-- Logo/Name with terminal style -->
    <a href="#hero" class="logo-container">
      <span class="logo-bracket">[</span>
      <span class="logo-text">{name}</span>
      <span class="logo-bracket">]</span>
      <span class="logo-cursor">_</span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-8">
      {navLinks.map(({ href, label }) => (
        <a href={href} class="nav-link">
          <span class="nav-bracket">&gt;</span>
          <span class="nav-text">{label}</span>
        </a>
      ))}
    </div>

    <!-- Social Icons & Theme Toggle -->
    <div class="flex items-center gap-4">
      <div class="hidden sm:flex items-center gap-3">
        {socialLinks.map(({ href, icon: Icon, label }) => (
          <a
            href={href}
            target={href.startsWith('#') ? undefined : '_blank'}
            rel={href.startsWith('#') ? undefined : 'noopener noreferrer'}
            aria-label={label}
            class="social-icon"
          >
            <Icon class="w-5 h-5" />
          </a>
        ))}
      </div>
      <ThemeToggle />

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-accent hover:text-accent-hover terminal-button"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu hidden">
    <div class="px-6 py-4 space-y-4">
      {navLinks.map(({ href, label }) => (
        <a href={href} class="mobile-nav-link">
          <span class="nav-bracket">&gt;</span>
          <span>{label}</span>
        </a>
      ))}
      <div class="flex items-center gap-4 pt-4 border-t border-accent/20">
        {socialLinks.map(({ href, icon: Icon, label }) => (
          <a
            href={href}
            target={href.startsWith('#') ? undefined : '_blank'}
            rel={href.startsWith('#') ? undefined : 'noopener noreferrer'}
            aria-label={label}
            class="social-icon"
          >
            <Icon class="w-5 h-5" />
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<style>
  .header-terminal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: var(--color-bg-header);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border);
    box-shadow: 0 4px 20px var(--color-glow);
  }

  .logo-container {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    transition: all 0.3s ease;
  }

  .logo-bracket {
    color: var(--color-accent);
    font-size: 1.5rem;
    font-weight: 900;
  }

  .logo-text {
    color: var(--color-text);
    text-shadow: 0 0 10px var(--color-glow);
  }

  .logo-cursor {
    display: inline-block;
    width: 0.5em;
    height: 1em;
    background: var(--color-accent-hover);
    animation: blink 1s step-end infinite;
  }

  .logo-container:hover .logo-text {
    color: var(--color-accent);
    text-shadow: 0 0 20px var(--color-glow);
  }

  .nav-link {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-bracket {
    color: var(--color-accent);
    opacity: 0;
    transform: translateX(-5px);
    transition: all 0.3s ease;
  }

  .nav-text {
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .nav-link:hover .nav-bracket {
    opacity: 1;
    transform: translateX(0);
  }

  .nav-link:hover .nav-text::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
    box-shadow: 0 0 10px var(--color-glow);
  }

  .social-icon {
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
  }

  .social-icon:hover {
    color: var(--color-accent);
    transform: translateY(-2px);
    filter: drop-shadow(0 0 8px var(--color-glow));
  }

  .terminal-button {
    border: 1px solid var(--color-border);
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .terminal-button:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 10px var(--color-glow);
  }

  .mobile-menu {
    background: var(--color-bg-mobile-menu);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--color-border);
  }

  .mobile-nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-mono);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
  }

  .mobile-nav-link:hover {
    color: var(--color-accent);
    padding-left: 0.5rem;
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Add scroll effect to header
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const header = document.getElementById('header');
    const currentScroll = window.pageYOffset;

    if (currentScroll > 100) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });
</script>
